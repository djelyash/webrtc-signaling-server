{
  "server": {
    "port": 9090
  },
  "offerProcessingTimeoutSec": 15,
  "connectionIdleTimeoutSec": 30,
  "database" : "dynamodbV3",
  "queue": "sqs",
  "connectionTypes": ["client", "application"],
  "aws": {
    "sdk" : {
      "region": "eu-west-1"
    },
    "sqs" : {
      "queues" : [
        {
          "type": "client", "name" : "hyperscale-sig-srv-client-v1"
        },
        {
          "type": "application", "name" : "hyperscale-sig-srv-app-v1"
        }
      ]
    },
    "dynamodb" : {
      "tableName": "hyperscale-connection-v1",
      "connectionTtlDays":  7,
      "local": false
    }
  },
  "metrics": {
    "WebRtcOpenConnections": {
      "type": "Counter",
      "options": {
        "name": "WebRtcOpenConnections",
        "help": "counter of hyperscale connections",
        "labelNames": ["connectionType", "status"]
      }
    },
    "WebRtcUnallocatedConnections": {
    "type": "Gauge",
    "options": {
      "name": "WebRtcUnallocatedConnections",
      "help": "counter of hyperscale unallocated connections",
      "labelNames": ["connectionType"]
    }
  }
  },
  "logging": {
    "componentName": "signaling-server",
    "level": "info",
    "silent": false,
    "humanReadable": false,
    "ignoredRoutes": ["/manage/health", "/manage/alive", "/manage/metrics"]
  }
}